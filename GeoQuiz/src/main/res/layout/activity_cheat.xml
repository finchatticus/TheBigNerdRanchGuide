<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                tools:context="ua.vlad.bignerdranchguide.CheatActivity">
    
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="24dp"
              android:text="@string/text_warning"/>
    
    <TextView android:id="@+id/text_view_answer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="24dp"
              tools:text="Answer"/>

    <Button android:id="@+id/button_show_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_answer_button"/>

    <TextView android:id="@+id/text_view_api_level"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="24dp"
              android:text="@string/text_view_api_level"
              tools:text="API level 21"/>
    
</LinearLayout>